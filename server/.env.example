# ===============================

# Environment Variables Example

# Copy this file to `.env` and fill in real values

# ===============================

# -------- Backend / Database --------

# Example:

# postgresql+asyncpg://user:password@localhost:5432/db_name

DATABASE_URL=

# -------- Security / Auth --------

# Generate with:

# python -c "import secrets; print(secrets.token_hex(32))"

SECRET_KEY=

# JWT algorithm (usually HS256)

ALGORITHM=HS256

# Access token lifetime (minutes)

ACCESS_TOKEN_EXPIRE_MINUTES=30

# Salt for hashing (optional, but recommended)

# Example: random string

SALT=

# -------- AI / Chat --------

# Internal chat key (project-specific)

CHAT_KEY=

# OpenAI API key

# Example: sk-xxxxxxxxxxxxxxxx

OPENAI_API_KEY=

# -------- Firebase / FCM --------

# Firebase Cloud Messaging server key

FCM_SERVER_KEY=

# Path to Google service account JSON file

# Example: firebase/service_account.json

GOOGLE_APPLICATION_CREDENTIALS=

# Firebase project ID

FCM_PROJECT_ID=
