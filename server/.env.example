# ==================================================
# Environment Variables Example
# --------------------------------------------------
# Copy this file to `.env` and fill in actual values.
# DO NOT commit `.env` to version control.
# ==================================================

# ================= Backend / Database =================

# PostgreSQL connection string
# Format:
# postgresql+asyncpg://<username>:<password>@<host>:<port>/<database_name>

DATABASE_URL=

# ================= Security / Authentication =================

# Secret key used for JWT token generation
# Generate using:
# python -c "import secrets; print(secrets.token_hex(32))"

SECRET_KEY=

# JWT signing algorithm (default: HS256)
ALGORITHM=HS256

# Access token expiration time (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=49

# Optional salt value for additional hashing security
# Example: random string

SALT=

# ================= AI / Chat Features (Optional) =================

# Internal project chat key (if applicable)
CHAT_KEY=

# OpenAI API key (required only if AI/chat features are enabled)
# Format: sk-xxxxxxxxxxxxxxxxxxxxxxxx

OPENAI_API_KEY=

# ================= Firebase / FCM (Optional) =================

# Firebase Cloud Messaging server key
FCM_SERVER_KEY=

# Path to Google service account JSON file
# Example: app/core/serviceAccountKey.json

GOOGLE_APPLICATION_CREDENTIALS=

# Firebase project ID
FCM_PROJECT_ID=